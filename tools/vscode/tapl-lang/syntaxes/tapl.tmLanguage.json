{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TAPL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tapl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tapl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tapl",
          "match": "\\b(break|breakall|class|continue|else|false|for|if|list|null|print|println|return|super|this|true|while)\\b"
        }
      ]
    },
    "string-double": {
      "name": "string.quoted.double.tapl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.tapl",
          "match": "\\\\."
        }
      ]
    },
    "string-single": {
      "name": "string.quoted.single.tapl",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.tapl",
          "match": "\\\\."
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "include": "#string-double"
        },
        {
          "include": "#string-single"
        }
      ]
    }
  },
  "scopeName": "source.tim"
}
